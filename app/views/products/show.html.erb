<p id="notice"><%= notice %></p>

<p>
  <%= image_tag(@product.picture_url, :size => "100x100") if @product.picture? %>
</p>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>
<p>
  <b>Price:</b>
  R$ <%= @product.price %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
  <b> Orders</b>
</p>
  <% for order in @product.orders %>

<ul>
  <li>
    <%= order.message %>
    <%= order.email %>
  </li>
</ul>
   <%  end %>



<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
